{
  "container": {
    "name": "Tiema MVP Demo",
    "version": "0.1.0",
    "scanIntervalMs": 100,
    "maxConcurrentCycles": 5,
    "logLevel": "Information"
  },
  "modules": [
    {
      "name": "ModbusSensor",
      "path": "../../../../plugins/net10.0/ModbusSensor.dll",
      "enabled": true,
      "priority": 0,
      "configuration": {
        "deviceIp": "192.168.1.100",
        "devicePort": 502,
        "slaveId": 1,
        "pollingInterval": 1000,
        "rack": "MainRack",
        "slotIndex": 0
      }
    },
    {
      "name": "TemperatureLogic",
      "path": "../../../../plugins/net10.0/TemperatureLogic.dll",
      "enabled": true,
      "priority": 1,
      "configuration": {
        "alarmThreshold": 30.0,
        "hysteresis": 2.0,
        "rack": "MainRack",
        "slotIndex": 1
      }
    },
    {
      "name": "SimpleAlarm",
      "path": "../../../../plugins/net10.0/SimpleAlarm.dll",
      "enabled": true,
      "priority": 2,
      "configuration": {
        "notificationEnabled": true,
        "emailRecipients": [ "operator@plant.com" ],
        "rack": "MainRack",
        "slotIndex": 2
      }
    },
    {
      "name": "LedSimulator",
      "path": "../../../../plugins/net10.0/LedSimulator.dll",
      "enabled": true,
      "priority": 3,
      "configuration": {
        "rack": "MainRack",
        "slotIndex": 3
      }
    }
  ],
  "racks": [
    {
      "name": "MainRack",
      "slotCount": 4,
      "slots": [
        {
          "id": 0,
          "name": "SensorSlot0",
          "parameters": { "ioMap": "A0", "driver": "Modbus" }
        },
        {
          "id": 1,
          "name": "LogicSlot1",
          "parameters": { "priority": "high" }
        },
        {
          "id": 2,
          "name": "AlarmSlot2",
          "parameters": { "sensitivity": "medium" }
        },
        {
          "id": 3,
          "name": "LedSlot3",
          "parameters": {  }
        }
      ]
    }
  ],
  "tags": {
    "enabled": true,
    "persistToFile": true,
    "persistencePath": "./data/tags.json",
    "defaultTags": {
      "System/Status": "Running",
      "System/StartTime": "2024-01-01T00:00:00",
      "System/CycleCount": 0
    }
  },
  "messaging": {
    "enabled": true,
    "transport": "inmemory",
    "host": "localhost",
    "port": 50051
  }
}